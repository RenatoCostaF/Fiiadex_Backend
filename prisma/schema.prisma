generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id           String               @id @default(uuid()) @map("_id")
  email        String               @unique
  password     String
  name         String
  role         String
  created_at   DateTime             @default(now())
  updated_at   DateTime             @updatedAt
  refreshToken RefreshTokenSchema[]

  @@map("users")
}

model RefreshTokenSchema {
  id       String @id @default(uuid()) @map("_id")
  expireIn Int
  userId   String
  user     User   @relation(fields: [userId], references: [id])

  @@map("refresh_token")
}

model Customers {
  id          String   @id @default(uuid()) @map("_id")
  email       String   @unique
  name        String
  fantasyName String
  phoneOne    String
  phoneTwo    String
  address     String
  dateOfBirth String
  created_at  DateTime @default(now())
  updated_at  DateTime @updatedAt

  @@map("customers")
}
